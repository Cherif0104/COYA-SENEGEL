<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_task_form_weekly" model="ir.ui.view">
        <field name="name">project.task.form.weekly</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="COYA – Tâche hebdo / objectifs" name="group_coya_weekly">
                    <field name="task_type"/>
                    <field name="date_limite"/>
                    <field name="livree"/>
                    <field name="coya_projet_id"/>
                    <field name="coya_programme_id"/>
                    <field name="objectif_smart" colspan="2"/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="view_project_task_list_weekly" model="ir.ui.view">
        <field name="name">project.task.list.weekly</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="task_type"/>
                <field name="date_limite"/>
                <field name="livree"/>
            </xpath>
        </field>
    </record>
</odoo>
