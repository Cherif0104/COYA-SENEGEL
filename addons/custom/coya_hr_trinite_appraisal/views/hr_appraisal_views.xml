<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_hr_appraisal_form_trinite" model="ir.ui.view">
            <field name="name">hr.appraisal.form.trinite</field>
            <field name="model">hr.appraisal</field>
            <field name="inherit_id" ref="hr_appraisal.view_hr_appraisal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Trinité (dernière période)" name="group_trinite_appraisal">
                        <field name="last_trinite_score_id" invisible="1"/>
                        <field name="trinite_score_ndiguel" readonly="1"/>
                        <field name="trinite_score_barke" readonly="1"/>
                        <field name="trinite_score_yar" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
