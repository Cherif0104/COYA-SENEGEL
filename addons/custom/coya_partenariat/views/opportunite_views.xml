<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_coya_opportunite_kanban" model="ir.ui.view">
            <field name="name">coya.opportunite.kanban</field>
            <field name="model">coya.opportunite</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="stage"/>
                    <field name="partner_id"/>
                    <field name="montant_estime"/>
                    <field name="date_prevue"/>
                    <templates>
                        <t t-name="card">
                            <div class="d-flex flex-column">
                                <strong><field name="name"/></strong>
                                <div><field name="partner_id"/></div>
                                <div><field name="montant_estime"/> — <field name="date_prevue"/></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="view_coya_opportunite_form" model="ir.ui.view">
            <field name="name">coya.opportunite.form</field>
            <field name="model">coya.opportunite</field>
            <field name="arch" type="xml">
                <form string="Opportunité">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="stage"/>
                            </group>
                            <group>
                                <field name="montant_estime"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="date_prevue"/>
                            </group>
                        </group>
                        <field name="description"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_coya_opportunite" model="ir.actions.act_window">
            <field name="name">Opportunités</field>
            <field name="res_model">coya.opportunite</field>
            <field name="view_mode">kanban,form</field>
        </record>
    </data>
</odoo>
