<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_coya_presence_day_tree" model="ir.ui.view">
        <field name="name">coya.presence.day.tree</field>
        <field name="model">coya.presence.day</field>
        <field name="arch" type="xml">
            <list string="Statut présence par jour" create="0">
                <field name="date"/>
                <field name="employee_id"/>
                <field name="status"/>
                <field name="hours_worked"/>
                <field name="leave_id"/>
            </list>
        </field>
    </record>
    <record id="view_coya_presence_day_search" model="ir.ui.view">
        <field name="name">coya.presence.day.search</field>
        <field name="model">coya.presence.day</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="date"/>
                <field name="status"/>
                <filter string="Présent" name="present" domain="[('status','=','present')]"/>
                <filter string="Absent" name="absent" domain="[('status','=','absent')]"/>
                <filter string="Congé" name="conge" domain="[('status','=','conge')]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Employé" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
