<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_company_form_presence_policy" model="ir.ui.view">
        <field name="name">res.company.form.presence.policy</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <group string="Politique de prÃ©sence" name="group_presence_policy">
                    <field name="presence_heures_cibles_semaine"/>
                    <field name="presence_plafond_heures_jour"/>
                    <field name="presence_appliquer_defalcation"/>
                </group>
                <group string="Alertes et sanctions" name="group_presence_alertes">
                    <field name="presence_nb_alertes_avant_sanction"/>
                    <field name="presence_sanction_type"/>
                    <field name="presence_sanction_montant" attrs="{'invisible': [('presence_sanction_type', '!=', 'fixe')]}"/>
                    <field name="presence_sanction_taux" attrs="{'invisible': [('presence_sanction_type', '!=', 'pourcentage')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
