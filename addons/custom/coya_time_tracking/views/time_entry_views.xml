<?xml version="1.0" encoding="UTF-8"?>
<data noupdate="1">
    <!-- Tree view -->
    <record id="view_coya_time_entry_tree" model="ir.ui.view">
        <field name="name">coya.time.entry.tree</field>
        <field name="model">coya.time.entry</field>
        <field name="arch" type="xml">
            <list string="Entrées de temps" editable="bottom">
                <field name="date"/>
                <field name="employee_id"/>
                <field name="activity_type"/>
                <field name="date_start"/>
                <field name="date_stop"/>
                <field name="unit_amount"/>
                <field name="project_id" optional="show"/>
                <field name="task_id" optional="show"/>
                <field name="planning_slot_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_coya_time_entry_form" model="ir.ui.view">
        <field name="name">coya.time.entry.form</field>
        <field name="model">coya.time.entry</field>
        <field name="arch" type="xml">
            <form string="Entrée de temps">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="date"/>
                            <field name="activity_type"/>
                            <field name="planning_slot_id"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                            <field name="unit_amount"/>
                            <field name="project_id"/>
                            <field name="task_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_coya_time_entry" model="ir.actions.act_window">
        <field name="name">Suivi du temps</field>
        <field name="res_model">coya.time.entry</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre première entrée de temps.
            </p>
            <p>
                Enregistrez le temps travaillé (production, réunions, formations, terrain, télétravail).
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_coya_time_tracking"
              name="Suivi du temps"
              parent="coya_planning.menu_coya_planning_root"
              action="action_coya_time_entry"
              sequence="20"
              web_icon="hr_attendance,static/description/icon.png"/>
</data>
