<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_coya_appraisal_manager_tree" model="ir.ui.view">
        <field name="name">coya.appraisal.manager.tree</field>
        <field name="model">coya.appraisal.manager</field>
        <field name="arch" type="xml">
            <list string="Évaluations managers">
                <field name="employee_id"/>
                <field name="period_start"/>
                <field name="period_end"/>
                <field name="state"/>
                <field name="note_superior"/>
                <field name="note_collaborators_avg"/>
                <field name="note_final"/>
            </list>
        </field>
    </record>
    <record id="view_coya_appraisal_manager_form" model="ir.ui.view">
        <field name="name">coya.appraisal.manager.form</field>
        <field name="model">coya.appraisal.manager</field>
        <field name="arch" type="xml">
            <form string="Évaluation manager">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="period_start"/>
                            <field name="period_end"/>
                            <field name="state"/>
                            <field name="weight_superior"/>
                            <field name="weight_collaborators" readonly="1"/>
                        </group>
                        <group>
                            <field name="note_superior"/>
                            <field name="note_collaborators_avg" readonly="1"/>
                            <field name="note_final" readonly="1"/>
                        </group>
                    </group>
                    <group string="Bloc supérieur hiérarchique (50–60 %)" name="group_superior">
                        <field name="comment_superior" colspan="2" placeholder="Commentaire du supérieur…"/>
                    </group>
                    <group string="Réponses collaborateurs (anonymes, 40–50 %)" name="group_collaborators">
                        <field name="response_ids" nolabel="1" readonly="1">
                            <list create="0" delete="0" editable="bottom">
                                <field name="note"/>
                                <field name="comment"/>
                            </list>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="action_start_collect" string="Ouvrir saisie collaborateurs" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_done" string="Clôturer" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="view_coya_appraisal_manager_response_form" model="ir.ui.view">
        <field name="name">coya.appraisal.manager.response.form</field>
        <field name="model">coya.appraisal.manager.response</field>
        <field name="arch" type="xml">
            <form string="Réponse (anonyme)">
                <sheet>
                    <group>
                        <field name="appraisal_id" readonly="1"/>
                        <field name="note" widget="float"/>
                        <field name="comment" placeholder="Commentaire optionnel…"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
