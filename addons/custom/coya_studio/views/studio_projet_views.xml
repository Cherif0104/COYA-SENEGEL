<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_coya_studio_projet_kanban" model="ir.ui.view">
            <field name="name">coya.studio.projet.kanban</field>
            <field name="model">coya.studio.projet</field>
            <field name="arch" type="xml">
                <kanban default_group_by="etape" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="etape"/>
                    <field name="user_id"/>
                    <field name="date_debut"/>
                    <field name="budget_estime"/>
                    <templates>
                        <t t-name="card">
                            <div class="d-flex flex-column">
                                <strong><field name="name"/></strong>
                                <div><field name="user_id"/></div>
                                <div class="text-muted"><field name="date_debut"/> â€” <field name="budget_estime"/></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="view_coya_studio_projet_form" model="ir.ui.view">
            <field name="name">coya.studio.projet.form</field>
            <field name="model">coya.studio.projet</field>
            <field name="arch" type="xml">
                <form string="Projet Studio">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="etape"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="date_debut"/>
                                <field name="date_fin_prevue"/>
                                <field name="budget_estime"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <field name="description"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_coya_studio_projet" model="ir.actions.act_window">
            <field name="name">Studio</field>
            <field name="res_model">coya.studio.projet</field>
            <field name="view_mode">kanban,form</field>
        </record>
        <menuitem id="menu_coya_studio_root"
                  name="Studio"
                  parent="coya_departments.menu_coya_department_audiovisuel"
                  action="action_coya_studio_projet"
                  sequence="10"/>
    </data>
</odoo>
