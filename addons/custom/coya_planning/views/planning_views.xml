<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <!-- Tree view -->
    <record id="view_coya_planning_slot_tree" model="ir.ui.view">
        <field name="name">coya.planning.slot.tree</field>
        <field name="model">coya.planning.slot</field>
        <field name="arch" type="xml">
            <list string="Créneaux" editable="bottom">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="slot_type"/>
                <field name="date_start"/>
                <field name="date_stop"/>
                <field name="location"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_coya_planning_slot_form" model="ir.ui.view">
        <field name="name">coya.planning.slot.form</field>
        <field name="model">coya.planning.slot</field>
        <field name="arch" type="xml">
            <form string="Créneau de planification">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employee_id"/>
                            <field name="slot_type"/>
                            <field name="location"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Calendar view -->
    <record id="view_coya_planning_slot_calendar" model="ir.ui.view">
        <field name="name">coya.planning.slot.calendar</field>
        <field name="model">coya.planning.slot</field>
        <field name="arch" type="xml">
            <calendar string="Planning" date_start="date_start" date_stop="date_stop"
                      color="employee_id" mode="week">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="slot_type"/>
                <field name="location"/>
            </calendar>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_coya_planning_slot" model="ir.actions.act_window">
        <field name="name">Planification</field>
        <field name="res_model">coya.planning.slot</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="context">{'search_default_confirmed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier créneau de planification.
            </p>
            <p>
                Planifiez les réunions, télétravail, interventions terrain, formations,
                congés et modulations d'heures pour chaque employé.
            </p>
        </field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_coya_planning_root"
              name="Planification"
              sequence="50"
              web_icon="calendar,static/description/icon.png"/>

    <menuitem id="menu_coya_planning_slot"
              name="Créneaux"
              parent="menu_coya_planning_root"
              action="action_coya_planning_slot"
              sequence="10"/>
    </data>
</odoo>
