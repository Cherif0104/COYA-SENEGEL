        <record id="view_coya_projet_tree_project" model="ir.ui.view" inherit_id="coya_programme_budget.view_coya_projet_tree">
            <field name="arch" type="xml">
                <xpath expr="//field[@name='programme_id']" position="after">
                    <field name="project_id"/>
                </xpath>
            </field>
        </record>
        <record id="view_coya_projet_form_project" model="ir.ui.view" inherit_id="coya_programme_budget.view_coya_projet_form">
            <field name="arch" type="xml">
                <xpath expr="//field[@name='programme_id']" position="after">
                    <field name="project_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
