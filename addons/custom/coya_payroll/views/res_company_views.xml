<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_company_form_coya_payroll" model="ir.ui.view">
        <field name="name">res.company.form.coya.payroll</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <group string="Paie (cotisations)" name="group_coya_payroll">
                    <field name="cnss_employee_rate"/>
                    <field name="cnss_employer_rate"/>
                    <field name="amo_rate"/>
                    <field name="mutuelle_employee"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
