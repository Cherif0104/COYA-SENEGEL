<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_contract_form_coya_payroll" model="ir.ui.view">
        <field name="name">hr.contract.form.coya.payroll</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.view_hr_contract_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='wage']" position="after">
                <field name="wage_type"/>
                <field name="hourly_rate" attrs="{'invisible': [('wage_type', '!=', 'hourly')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
