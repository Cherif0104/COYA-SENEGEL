<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_coya_payslip_tree" model="ir.ui.view">
        <field name="name">coya.payslip.tree</field>
        <field name="model">coya.payslip</field>
        <field name="arch" type="xml">
            <list string="Bulletins de paie" editable="bottom">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="state"/>
                <field name="total_brut"/>
                <field name="total_net"/>
            </list>
        </field>
    </record>
    <record id="view_coya_payslip_form" model="ir.ui.view">
        <field name="name">coya.payslip.form</field>
        <field name="model">coya.payslip</field>
        <field name="arch" type="xml">
            <form string="Bulletin de paie">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_compute" type="object" string="Calculer" class="oe_stat_button" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_validate" type="object" string="Valider" class="oe_stat_button" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_cancel" type="object" string="Annuler" attrs="{'invisible': [('state', '=', 'cancel')]}"/>
                        <button name="action_draft" type="object" string="Remettre en brouillon" attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="employee_id"/>
                            <field name="contract_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="total_brut" readonly="1"/>
                            <field name="total_cotisations" readonly="1"/>
                            <field name="total_retenues" readonly="1"/>
                            <field name="total_net" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lignes" name="lines">
                            <field name="line_ids" nolabel="1">
                                <list create="0" delete="0" editable="bottom">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="category"/>
                                    <field name="amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_coya_payslip_line_tree" model="ir.ui.view">
        <field name="name">coya.payslip.line.tree</field>
        <field name="model">coya.payslip.line</field>
        <field name="arch" type="xml">
            <list create="0" delete="0">
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="amount"/>
                <field name="payslip_id"/>
            </list>
        </field>
    </record>
</odoo>
