<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <!-- Extension vue Réponse : champs bootcamp/cohorte -->
    <record id="view_coya_fiche_reponse_form_bootcamp" model="ir.ui.view">
        <field name="name">coya.fiche.reponse.form.bootcamp</field>
        <field name="model">coya.fiche.reponse</field>
        <field name="inherit_id" ref="coya_collecte.view_coya_fiche_reponse_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="bootcamp_id"/>
                <field name="cohorte_id"/>
            </xpath>
        </field>
    </record>

    <!-- Bootcamp -->
    <record id="view_coya_bootcamp_form" model="ir.ui.view">
        <field name="name">coya.bootcamp.form</field>
        <field name="model">coya.bootcamp</field>
        <field name="arch" type="xml">
            <form string="Bootcamp">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Cohortes" name="cohortes">
                            <field name="cohorte_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_coya_bootcamp_tree" model="ir.ui.view">
        <field name="name">coya.bootcamp.tree</field>
        <field name="model">coya.bootcamp</field>
        <field name="arch" type="xml">
            <list string="Bootcamps">
                <field name="name"/>
                <field name="partner_id"/>
            </list>
        </field>
    </record>

    <!-- Cohorte -->
    <record id="view_coya_bootcamp_cohorte_form" model="ir.ui.view">
        <field name="name">coya.bootcamp.cohorte.form</field>
        <field name="model">coya.bootcamp.cohorte</field>
        <field name="arch" type="xml">
            <form string="Cohorte">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="bootcamp_id"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="location"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Intervenants" name="intervenants">
                            <field name="intervenant_ids">
                                <list editable="bottom">
                                    <field name="sequence"/>
                                    <field name="partner_id"/>
                                    <field name="role"/>
                                </list>
                            </field>
                        </page>
                        <page string="Participants" name="participants">
                            <field name="participant_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="state"/>
                                    <field name="fiche_reponse_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_coya_bootcamp_cohorte_tree" model="ir.ui.view">
        <field name="name">coya.bootcamp.cohorte.tree</field>
        <field name="model">coya.bootcamp.cohorte</field>
        <field name="arch" type="xml">
            <list string="Cohortes">
                <field name="name"/>
                <field name="bootcamp_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="location"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Parcours apprenant : participants -->
    <record id="view_coya_bootcamp_participant_kanban" model="ir.ui.view">
        <field name="name">coya.bootcamp.participant.kanban</field>
        <field name="model">coya.bootcamp.participant</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="state"/>
                <field name="cohorte_id"/>
                <field name="date_inscription"/>
                <field name="date_certification"/>
                <templates>
                    <t t-name="card">
                        <div class="d-flex flex-column">
                            <strong><field name="name"/></strong>
                            <div><field name="cohorte_id"/></div>
                            <div class="text-muted">
                                <field name="date_inscription"/> → <field name="date_certification"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_coya_bootcamp_participant_tree" model="ir.ui.view">
        <field name="name">coya.bootcamp.participant.tree</field>
        <field name="model">coya.bootcamp.participant</field>
        <field name="arch" type="xml">
            <list string="Participants" create="1" delete="1" edit="1">
                <field name="name"/>
                <field name="cohorte_id"/>
                <field name="email"/>
                <field name="state"/>
                <field name="date_inscription"/>
                <field name="date_certification"/>
            </list>
        </field>
    </record>
    <record id="view_coya_bootcamp_participant_form" model="ir.ui.view">
        <field name="name">coya.bootcamp.participant.form</field>
        <field name="model">coya.bootcamp.participant</field>
        <field name="arch" type="xml">
            <form string="Participant">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="cohorte_id"/>
                            <field name="state"/>
                            <field name="date_inscription"/>
                            <field name="date_certification"/>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="partner_id"/>
                            <field name="fiche_reponse_id"/>
                        </group>
                    </group>
                    <field name="notes" placeholder="Notes..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_coya_bootcamp" model="ir.actions.act_window">
        <field name="name">Bootcamps</field>
        <field name="res_model">coya.bootcamp</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="action_coya_bootcamp_cohorte" model="ir.actions.act_window">
        <field name="name">Cohortes</field>
        <field name="res_model">coya.bootcamp.cohorte</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="action_coya_bootcamp_parcours" model="ir.actions.act_window">
        <field name="name">Parcours apprenants</field>
        <field name="res_model">coya.bootcamp.participant</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_coya_bootcamp_root"
              name="Bootcamps"
              parent="coya_departments.menu_coya_department_formation"
              sequence="75"
              groups="coya_departments.group_coya_departments_formation"/>

    <menuitem id="menu_coya_bootcamp"
              name="Bootcamps"
              parent="menu_coya_bootcamp_root"
              action="action_coya_bootcamp"
              sequence="10"/>

    <menuitem id="menu_coya_bootcamp_cohorte"
              name="Cohortes"
              parent="menu_coya_bootcamp_root"
              action="action_coya_bootcamp_cohorte"
              sequence="20"/>

    <menuitem id="menu_coya_bootcamp_parcours"
              name="Parcours apprenants"
              parent="menu_coya_bootcamp_root"
              action="action_coya_bootcamp_parcours"
              sequence="15"/>
    </data>
</odoo>
