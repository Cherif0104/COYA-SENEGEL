<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Synthèse par semaine -->
    <record id="view_coya_presence_week_tree" model="ir.ui.view">
        <field name="name">coya.presence.week.tree</field>
        <field name="model">coya.presence.week</field>
        <field name="arch" type="xml">
            <list string="Synthèse par semaine" create="0">
                <field name="week_start"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="hours_total"/>
                <field name="hours_target"/>
                <field name="hours_gap"/>
            </list>
        </field>
    </record>
    <record id="view_coya_presence_week_search" model="ir.ui.view">
        <field name="name">coya.presence.week.search</field>
        <field name="model">coya.presence.week</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="week_start"/>
                <filter string="Écart &lt; 0" name="gap_negative" domain="[('hours_gap','&lt;',0)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Semaine" name="group_week" context="{'group_by': 'week_start'}"/>
                    <filter string="Employé" name="group_employee" context="{'group_by': 'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
