<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Liste : ajout département -->
    <record id="view_coya_presence_day_tree_reporting" model="ir.ui.view">
        <field name="name">coya.presence.day.tree.reporting</field>
        <field name="model">coya.presence.day</field>
        <field name="inherit_id" ref="coya_presence_policy.view_coya_presence_day_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="department_id"/>
            </xpath>
        </field>
    </record>
    <!-- Filtre département dans la recherche -->
    <record id="view_coya_presence_day_search_reporting" model="ir.ui.view">
        <field name="name">coya.presence.day.search.reporting</field>
        <field name="model">coya.presence.day</field>
        <field name="inherit_id" ref="coya_presence_policy.view_coya_presence_day_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='employee_id']" position="after">
                <field name="department_id"/>
            </xpath>
        </field>
    </record>
    <!-- Pivot employés × dates -->
    <record id="view_coya_presence_day_pivot" model="ir.ui.view">
        <field name="name">coya.presence.day.pivot</field>
        <field name="model">coya.presence.day</field>
        <field name="arch" type="xml">
            <pivot string="Présences (pivot)">
                <field name="department_id" type="row"/>
                <field name="employee_id" type="row"/>
                <field name="date" type="col" interval="day"/>
                <field name="hours_worked" type="measure"/>
                <field name="status" type="row"/>
            </pivot>
        </field>
    </record>
</odoo>
