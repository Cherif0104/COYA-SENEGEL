<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_coya_presence_update_week_wizard_form" model="ir.ui.view">
        <field name="name">coya.presence.update.week.wizard.form</field>
        <field name="model">coya.presence.update.week.wizard</field>
        <field name="arch" type="xml">
            <form string="Mettre à jour synthèses hebdo">
                <group>
                    <field name="week_start"/>
                </group>
                <footer>
                    <button name="action_update_weeks" string="Mettre à jour" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
