<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_coya_juridique_risque_tree" model="ir.ui.view">
            <field name="name">coya.juridique.risque.tree</field>
            <field name="model">coya.juridique.risque</field>
            <field name="arch" type="xml">
                <list string="Risques" create="1" delete="1" edit="1" decoration-danger="gravite == 'critique'" decoration-warning="gravite == 'eleve'">
                    <field name="name"/>
                    <field name="type_risque"/>
                    <field name="gravite"/>
                    <field name="date_identification"/>
                    <field name="state"/>
                </list>
            </field>
        </record>
        <record id="view_coya_juridique_risque_form" model="ir.ui.view">
            <field name="name">coya.juridique.risque.form</field>
            <field name="model">coya.juridique.risque</field>
            <field name="arch" type="xml">
                <form string="Risque juridique">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="type_risque"/>
                                <field name="gravite"/>
                                <field name="state"/>
                            </group>
                            <group>
                                <field name="date_identification"/>
                            </group>
                        </group>
                        <field name="description"/>
                        <field name="mesure_prevue"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_coya_juridique_risque" model="ir.actions.act_window">
            <field name="name">Risques juridiques</field>
            <field name="res_model">coya.juridique.risque</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
