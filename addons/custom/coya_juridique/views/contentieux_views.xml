<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_coya_juridique_contentieux_tree" model="ir.ui.view">
            <field name="name">coya.juridique.contentieux.tree</field>
            <field name="model">coya.juridique.contentieux</field>
            <field name="arch" type="xml">
                <list string="Contentieux" create="1" delete="1" edit="1">
                    <field name="name"/>
                    <field name="reference"/>
                    <field name="type_contentieux"/>
                    <field name="date_ouverture"/>
                    <field name="part_autre"/>
                    <field name="state"/>
                </list>
            </field>
        </record>
        <record id="view_coya_juridique_contentieux_form" model="ir.ui.view">
            <field name="name">coya.juridique.contentieux.form</field>
            <field name="model">coya.juridique.contentieux</field>
            <field name="arch" type="xml">
                <form string="Contentieux">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="reference"/>
                                <field name="type_contentieux"/>
                            </group>
                            <group>
                                <field name="date_ouverture"/>
                                <field name="part_autre"/>
                                <field name="state"/>
                            </group>
                        </group>
                        <field name="description"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_coya_juridique_contentieux" model="ir.actions.act_window">
            <field name="name">Contentieux</field>
            <field name="res_model">coya.juridique.contentieux</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
