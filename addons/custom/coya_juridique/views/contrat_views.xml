<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_coya_juridique_contrat_tree" model="ir.ui.view">
            <field name="name">coya.juridique.contrat.tree</field>
            <field name="model">coya.juridique.contrat</field>
            <field name="arch" type="xml">
                <list string="Contrats" create="1" delete="1" edit="1" decoration-warning="state == 'a_renouveler'" decoration-muted="state == 'expire'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="type_contrat"/>
                    <field name="date_debut"/>
                    <field name="date_fin_effet"/>
                    <field name="state"/>
                </list>
            </field>
        </record>
        <record id="view_coya_juridique_contrat_form" model="ir.ui.view">
            <field name="name">coya.juridique.contrat.form</field>
            <field name="model">coya.juridique.contrat</field>
            <field name="arch" type="xml">
                <form string="Contrat">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="type_contrat"/>
                            </group>
                            <group>
                                <field name="date_debut"/>
                                <field name="date_fin_effet"/>
                                <field name="state"/>
                            </group>
                        </group>
                        <field name="notes"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_coya_juridique_contrat" model="ir.actions.act_window">
            <field name="name">Contrats</field>
            <field name="res_model">coya.juridique.contrat</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
