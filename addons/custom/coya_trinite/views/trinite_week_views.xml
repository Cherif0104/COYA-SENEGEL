<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_coya_trinite_week_tree" model="ir.ui.view">
        <field name="name">coya.trinite.week.tree</field>
        <field name="model">coya.trinite.week</field>
        <field name="arch" type="xml">
            <list string="Périodes hebdo Trinité">
                <field name="week_start"/>
                <field name="week_end"/>
                <field name="state"/>
                <field name="company_id"/>
                <button name="action_close_week" type="object" string="Clôturer" icon="fa-lock" attrs="{'invisible': [('state', '=', 'closed')]}"/>
            </list>
        </field>
    </record>
    <record id="view_coya_trinite_week_form" model="ir.ui.view">
        <field name="name">coya.trinite.week.form</field>
        <field name="model">coya.trinite.week</field>
        <field name="arch" type="xml">
            <form string="Période hebdo">
                <sheet>
                    <group>
                        <field name="week_start"/>
                        <field name="week_end"/>
                        <field name="state"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_close_week" string="Clôturer la semaine" type="object" class="btn-primary" attrs="{'invisible': [('state', '=', 'closed')]}"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_coya_trinite_week" model="ir.actions.act_window">
        <field name="name">Périodes hebdo</field>
        <field name="res_model">coya.trinite.week</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="action_coya_point_vendredi" model="ir.actions.server">
        <field name="name">Point vendredi</field>
        <field name="model_id" ref="coya_trinite.model_coya_trinite_week"/>
        <field name="state">code</field>
        <field name="code">action = model.action_point_vendredi()</field>
    </record>
    <menuitem id="menu_coya_trinite_week"
              name="Point vendredi"
              parent="menu_coya_trinite_root"
              action="action_coya_point_vendredi"
              sequence="15"/>
    <menuitem id="menu_coya_trinite_periodes"
              name="Périodes hebdo"
              parent="menu_coya_trinite_root"
              action="action_coya_trinite_week"
              sequence="25"/>
</odoo>
