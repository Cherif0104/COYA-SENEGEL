<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_trinite_daily_reminder" model="ir.cron">
            <field name="name">Trinité : rappel quotidien (Xalima)</field>
            <field name="model_id" ref="coya_trinite.model_coya_trinite_week"/>
            <field name="state">code</field>
            <field name="code">model.cron_daily_reminder()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
        <record id="ir_cron_trinite_friday_close" model="ir.cron">
            <field name="name">Trinité : clôture automatique vendredi</field>
            <field name="model_id" ref="coya_trinite.model_coya_trinite_week"/>
            <field name="state">code</field>
            <field name="code">model.cron_friday_close()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="doall" eval="False"/>
            <!-- Exécution vendredi soir : nextcall à configurer manuellement ou via code (ex. vendredi 18h) -->
        </record>
    </data>
</odoo>
