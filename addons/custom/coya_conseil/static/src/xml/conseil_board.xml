<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="coya_conseil_board.ConseilBoard">
        <div class="coya_conseil_board container-fluid p-4">
            <h2>Tableau de bord Conseil</h2>
            <p class="text-muted">Vue stratégique : Trinité, programmes, alertes juridiques.</p>
            <div class="row mt-3">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Trinité</h5>
                            <p class="card-text">Scores et alertes Conseil (Ndiguel, Barké, Yar).</p>
                            <button type="button" class="btn btn-primary" t-on-click="(ev) => this.openMenu(ev)" data-menu="trinite">Ouvrir Trinité</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Programmes &amp; Budgets</h5>
                            <p class="card-text">Comptabilité analytique programmes, dossiers projets.</p>
                            <button type="button" class="btn btn-primary" t-on-click="(ev) => this.openMenu(ev)" data-menu="programme">Ouvrir Programmes</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Juridique</h5>
                            <p class="card-text">Risques, contrats à renouveler, contentieux.</p>
                            <button type="button" class="btn btn-primary" t-on-click="(ev) => this.openMenu(ev)" data-menu="juridique">Ouvrir Juridique</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
