<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_coya_qualite_score_tree" model="ir.ui.view">
            <field name="name">coya.qualite.score.tree</field>
            <field name="model">coya.qualite.score</field>
            <field name="arch" type="xml">
                <list string="Scores qualité" create="1" delete="1" edit="1">
                    <field name="name"/>
                    <field name="periode_start"/>
                    <field name="periode_end"/>
                    <field name="department_key"/>
                    <field name="employee_id"/>
                    <field name="score_global"/>
                    <field name="score_trinite"/>
                    <field name="score_audits"/>
                    <field name="score_controles"/>
                </list>
            </field>
        </record>
        <record id="view_coya_qualite_score_form" model="ir.ui.view">
            <field name="name">coya.qualite.score.form</field>
            <field name="model">coya.qualite.score</field>
            <field name="arch" type="xml">
                <form string="Score qualité">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="periode_start"/>
                                <field name="periode_end"/>
                            </group>
                            <group>
                                <field name="department_key"/>
                                <field name="employee_id"/>
                                <field name="score_global"/>
                            </group>
                        </group>
                        <group string="Détail par source">
                            <field name="score_trinite"/>
                            <field name="score_audits"/>
                            <field name="score_controles"/>
                        </group>
                        <field name="notes"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_coya_qualite_score" model="ir.actions.act_window">
            <field name="name">Scores qualité</field>
            <field name="res_model">coya.qualite.score</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_coya_qualite_root"
                  name="Qualité &amp; Suivi"
                  parent="coya_departments.menu_coya_department_qualite"
                  sequence="10"/>
        <menuitem id="menu_coya_qualite_score"
                  name="Scores qualité global"
                  parent="menu_coya_qualite_root"
                  action="action_coya_qualite_score"
                  sequence="10"/>
    </data>
</odoo>
