<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_coya_ligne_budgetaire_tree" model="ir.ui.view">
            <field name="name">coya.ligne.budgetaire.tree</field>
            <field name="model">coya.ligne.budgetaire</field>
            <field name="arch" type="xml">
                <list string="Lignes budgétaires" create="1" delete="1" edit="1">
                    <field name="name"/>
                    <field name="projet_id"/>
                    <field name="programme_id"/>
                    <field name="montant_previsionnel"/>
                    <field name="montant_engage"/>
                    <field name="montant_paye"/>
                    <field name="montant_restant"/>
                    <field name="currency_id" column_invisible="1"/>
                </list>
            </field>
        </record>
        <record id="view_coya_ligne_budgetaire_form" model="ir.ui.view">
            <field name="name">coya.ligne.budgetaire.form</field>
            <field name="model">coya.ligne.budgetaire</field>
            <field name="arch" type="xml">
                <form string="Ligne budgétaire">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="projet_id"/>
                                <field name="programme_id"/>
                            </group>
                            <group>
                                <field name="montant_previsionnel"/>
                                <field name="montant_engage"/>
                                <field name="montant_paye"/>
                                <field name="montant_restant"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <field name="imputation_ids" nolabel="1">
                            <list create="1" delete="1" edit="1">
                                <field name="date"/>
                                <field name="reference"/>
                                <field name="montant"/>
                                <field name="etat"/>
                                <field name="justificatif_attachment"/>
                            </list>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_coya_ligne_budgetaire" model="ir.actions.act_window">
            <field name="name">Lignes budgétaires</field>
            <field name="res_model">coya.ligne.budgetaire</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
