<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_coya_projet_tree" model="ir.ui.view">
            <field name="name">coya.projet.tree</field>
            <field name="model">coya.projet</field>
            <field name="arch" type="xml">
                <list string="Projets" create="1" delete="1" edit="1">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="programme_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="montant_total_previsionnel"/>
                    <field name="montant_engage"/>
                    <field name="montant_paye"/>
                    <field name="montant_restant"/>
                    <field name="currency_id" column_invisible="1"/>
                </list>
            </field>
        </record>
        <record id="view_coya_projet_form" model="ir.ui.view">
            <field name="name">coya.projet.form</field>
            <field name="model">coya.projet</field>
            <field name="arch" type="xml">
                <form string="Projet">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="state" widget="statusbar" statusbar_visible="draft,active,closing,closed,archived"/>
                                <field name="programme_id"/>
                            </group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <group string="Synthèse budgétaire">
                            <field name="montant_total_previsionnel"/>
                            <field name="montant_engage"/>
                            <field name="montant_paye"/>
                            <field name="montant_restant"/>
                        </group>
                        <field name="description" placeholder="Description..."/>
                        <notebook>
                            <page string="Lignes budgétaires" name="lignes">
                                <field name="ligne_budgetaire_ids" nolabel="1">
                                    <list create="1" delete="1" edit="1">
                                        <field name="name"/>
                                        <field name="montant_previsionnel"/>
                                        <field name="montant_engage"/>
                                        <field name="montant_paye"/>
                                        <field name="montant_restant"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_coya_projet" model="ir.actions.act_window">
            <field name="name">Projets</field>
            <field name="res_model">coya.projet</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
