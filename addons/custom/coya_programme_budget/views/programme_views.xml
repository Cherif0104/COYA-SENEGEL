<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_coya_programme_tree" model="ir.ui.view">
            <field name="name">coya.programme.tree</field>
            <field name="model">coya.programme</field>
            <field name="arch" type="xml">
                <list string="Programmes" create="1" delete="1" edit="1">
                    <field name="name"/>
                    <field name="bailleur_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="montant_total_previsionnel"/>
                    <field name="currency_id" column_invisible="1"/>
                </list>
            </field>
        </record>
        <record id="view_coya_programme_form" model="ir.ui.view">
            <field name="name">coya.programme.form</field>
            <field name="model">coya.programme</field>
            <field name="arch" type="xml">
                <form string="Programme">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="bailleur_id"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                        </group>
                        <field name="description" placeholder="Description du programme..."/>
                        <notebook>
                            <page string="Projets" name="projets">
                                <field name="projet_ids" nolabel="1">
                                    <list create="1" delete="1" edit="1">
                                        <field name="name"/>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                        <field name="montant_total_previsionnel"/>
                                        <field name="montant_engage"/>
                                        <field name="montant_paye"/>
                                        <field name="montant_restant"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_coya_programme" model="ir.actions.act_window">
            <field name="name">Programmes</field>
            <field name="res_model">coya.programme</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>
