<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_coya_imputation_depense_tree" model="ir.ui.view">
            <field name="name">coya.imputation.depense.tree</field>
            <field name="model">coya.imputation.depense</field>
            <field name="arch" type="xml">
                <list string="Imputations" create="1" delete="1" edit="1">
                    <field name="date"/>
                    <field name="ligne_budgetaire_id"/>
                    <field name="projet_id"/>
                    <field name="programme_id"/>
                    <field name="reference"/>
                    <field name="montant"/>
                    <field name="etat"/>
                    <field name="justificatif_attachment"/>
                </list>
            </field>
        </record>
        <record id="view_coya_imputation_depense_form" model="ir.ui.view">
            <field name="name">coya.imputation.depense.form</field>
            <field name="model">coya.imputation.depense</field>
            <field name="arch" type="xml">
                <form string="Imputation">
                    <sheet>
                        <group>
                            <group>
                                <field name="ligne_budgetaire_id"/>
                                <field name="projet_id"/>
                                <field name="programme_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="montant"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="etat"/>
                                <field name="justificatif_attachment"/>
                            </group>
                        </group>
                        <group>
                            <field name="reference" colspan="2"/>
                            <field name="description" colspan="2"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_coya_imputation_depense" model="ir.actions.act_window">
            <field name="name">Imputations</field>
            <field name="res_model">coya.imputation.depense</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
