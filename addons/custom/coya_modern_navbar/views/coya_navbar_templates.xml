<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Remplacement de la navbar Odoo par une sidebar fixe gauche moderne -->
    <template id="coya_modern_navbar" inherit_id="web.webclient_layout">
        <xpath expr="//div[hasclass('o_main_navbar')]" position="replace">
            <!-- Sidebar fixe gauche -->
            <div class="coya-sidebar" id="coya-sidebar">
                <!-- Logo / Brand -->
                <div class="coya-sidebar-brand">
                    <div class="coya-sidebar-logo">
                        <img src="/sunugest_branding/static/img/logo_senegel.png" alt="COYA.PRO"/>
                    </div>
                    <span class="coya-sidebar-brand-text">COYA.PRO</span>
                </div>

                <!-- Menu principal : toutes les apps accessibles -->
                <nav class="coya-sidebar-nav">
                    <div class="coya-nav-section">
                        <div class="coya-nav-section-title">MENU</div>
                        <ul class="coya-nav-list" id="coya-nav-apps">
                            <!-- Apps injectées par JS depuis ir.ui.menu -->
                        </ul>
                    </div>
                </nav>

                <!-- Section générale (Settings, Help, Logout) -->
                <div class="coya-sidebar-footer">
                    <ul class="coya-nav-list">
                        <li class="coya-nav-item">
                            <a href="#" class="coya-nav-link" data-menu-xmlid="base.menu_administration">
                                <i class="fa fa-cog" aria-hidden="true"></i>
                                <span class="coya-nav-text">Paramètres</span>
                            </a>
                        </li>
                        <li class="coya-nav-item">
                            <a href="#" class="coya-nav-link" data-menu-xmlid="base.menu_help">
                                <i class="fa fa-question-circle" aria-hidden="true"></i>
                                <span class="coya-nav-text">Aide</span>
                            </a>
                        </li>
                        <li class="coya-nav-item">
                            <a href="/web/session/logout" class="coya-nav-link">
                                <i class="fa fa-sign-out" aria-hidden="true"></i>
                                <span class="coya-nav-text">Déconnexion</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Zone principale (dashboard) à droite -->
            <div class="coya-main-content" id="coya-main-content">
                <!-- Header top bar (recherche, notifications, profil) -->
                <header class="coya-top-header">
                    <div class="coya-search-bar">
                        <i class="fa fa-search" aria-hidden="true"></i>
                        <input type="text" placeholder="Rechercher..." class="coya-search-input"/>
                    </div>
                    <div class="coya-header-actions">
                        <a href="#" class="coya-header-icon" title="Messages">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </a>
                        <a href="#" class="coya-header-icon" title="Notifications">
                            <i class="fa fa-bell" aria-hidden="true"></i>
                        </a>
                        <div class="coya-user-menu">
                            <img src="/web/image/res.users/1/avatar_128" alt="User" class="coya-user-avatar"/>
                            <span class="coya-user-name" id="coya-user-name">Utilisateur</span>
                        </div>
                    </div>
                </header>
            </div>
        </xpath>
    </template>
</odoo>
