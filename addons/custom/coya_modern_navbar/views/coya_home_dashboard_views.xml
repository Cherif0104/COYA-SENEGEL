<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action pour l'écran d'accueil : toutes les apps + vue 360° -->
    <record id="action_coya_home_dashboard" model="ir.actions.client">
        <field name="name">Tableau de bord COYA</field>
        <field name="tag">coya_home_dashboard</field>
        <field name="target">current</field>
    </record>

    <!-- Menu racine (remplace le menu Apps par défaut) -->
    <menuitem id="menu_coya_home_dashboard"
              name="Accueil"
              action="action_coya_home_dashboard"
              sequence="1"
              web_icon="coya_modern_navbar,static/description/icon.png"/>
</odoo>
