<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_coya_tech_projet_kanban_project" model="ir.ui.view" inherit_id="coya_tech.view_coya_tech_projet_kanban">
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="project_id"/>
                </xpath>
                <xpath expr="//t[@t-name='card']/div" position="inside">
                    <div><field name="project_id"/></div>
                </xpath>
            </field>
        </record>
        <record id="view_coya_tech_projet_form_project" model="ir.ui.view" inherit_id="coya_tech.view_coya_tech_projet_form">
            <field name="arch" type="xml">
                <xpath expr="//group[1]" position="inside">
                    <group>
                        <field name="project_id"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
