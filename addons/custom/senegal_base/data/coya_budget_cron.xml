<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Cron Odoo 18 : vérifier les dépassements de budget (sans numbercall) -->
    <record id="ir_cron_coya_budget_check" model="ir.cron">
        <field name="name">COYA – Vérifier les budgets</field>
        <field name="model_id" ref="model_coya_budget"/>
        <field name="state">code</field>
        <field name="code">model.search([]).action_check_alert()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="priority">10</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
