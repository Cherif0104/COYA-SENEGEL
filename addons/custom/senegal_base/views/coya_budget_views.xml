<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_coya_budget_tree" model="ir.ui.view">
        <field name="name">coya.budget.tree</field>
        <field name="model">coya.budget</field>
        <field name="arch" type="xml">
            <list string="Budgets COYA">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="project_id"/>
                <field name="department_id"/>
                <field name="coya_axis"/>
                <field name="analytic_account_id"/>
                <field name="amount_planned"/>
                <field name="amount_spent"/>
                <field name="amount_remaining"/>
                <field name="percent_used"/>
                <field name="alert_threshold"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_coya_budget_form" model="ir.ui.view">
        <field name="name">coya.budget.form</field>
        <field name="model">coya.budget</field>
        <field name="arch" type="xml">
            <form string="Budget COYA">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="coya_axis"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="project_id"/>
                        <field name="department_id"/>
                        <field name="analytic_account_id"/>
                    </group>
                    <group>
                        <field name="amount_planned"/>
                        <field name="amount_spent" readonly="1"/>
                        <field name="amount_remaining" readonly="1"/>
                        <field name="percent_used" readonly="1"/>
                        <field name="alert_threshold"/>
                        <field name="currency_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_coya_budget" model="ir.actions.act_window">
        <field name="name">Budgets COYA</field>
        <field name="res_model">coya.budget</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Suivez ici vos budgets par projet, département et axe Trinité.</p>
        </field>
    </record>

    <menuitem id="menu_coya_budget"
              name="Budgets"
              parent="menu_coya_finance"
              action="action_coya_budget"
              sequence="20"/>
</odoo>

