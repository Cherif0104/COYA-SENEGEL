<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Axe Trinité sur les employés -->
    <record id="view_hr_employee_form_coya_trinite" model="ir.ui.view">
        <field name="name">hr.employee.form.coya.trinite</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="coya_trinite" string="Trinité COYA">
                    <group>
                        <field name="coya_trinite_axis"/>
                        <field name="coya_trinite_score"/>
                    </group>
                    <group string="La Trinité COYA : Ndiguel (Productivité), Yéene (Profitabilité), Yar (Professionnalisme)."/>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Axe Trinité sur les projets (Odoo 18 : project.edit_project) -->
    <record id="view_project_form_coya_trinite" model="ir.ui.view">
        <field name="name">project.project.form.coya.trinite</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <group string="Trinité COYA">
                    <field name="coya_trinite_axis"/>
                    <field name="coya_trinite_score_ndiguel"/>
                    <field name="coya_trinite_score_barke"/>
                    <field name="coya_trinite_score_yar"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Axe Trinité sur les comptes analytiques (Odoo 18 : analytic.view_account_analytic_account_form) -->
    <record id="view_account_analytic_coya_trinite" model="ir.ui.view">
        <field name="name">account.analytic.account.form.coya.trinite</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="coya_trinite" string="Trinité COYA">
                    <group>
                        <field name="coya_trinite_axis"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

