<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Axe Trinité sur les employés -->
    <record id="view_hr_employee_form_coya_trinite" model="ir.ui.view">
        <field name="name">hr.employee.form.coya.trinite</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="coya_trinite" string="Trinité COYA">
                    <group>
                        <field name="coya_trinite_axis"/>
                        <field name="coya_trinite_score"/>
                    </group>
                    <group string="La Trinité COYA : Ndiguel (Productivité), Yéene (Profitabilité), Yar (Professionnalisme)."/>
                </page>
            </xpath>
        </field>
    </record>
    <!-- Vues Trinité Projet / Analytique : retirées (refs Odoo 18 instables). À recréer en UI ou via vues dédiées si besoin. -->
</odoo>

