<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_coya_tech_projet_kanban" model="ir.ui.view">
            <field name="name">coya.tech.projet.kanban</field>
            <field name="model">coya.tech.projet</field>
            <field name="arch" type="xml">
                <kanban default_group_by="etape" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="etape"/>
                    <field name="user_id"/>
                    <templates>
                        <t t-name="card">
                            <div class="d-flex flex-column">
                                <strong><field name="name"/></strong>
                                <div><field name="user_id"/></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="view_coya_tech_projet_form" model="ir.ui.view">
            <field name="name">coya.tech.projet.form</field>
            <field name="model">coya.tech.projet</field>
            <field name="arch" type="xml">
                <form string="Projet Tech">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="etape"/>
                                <field name="user_id"/>
                            </group>
                        </group>
                        <field name="description"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_coya_tech_projet" model="ir.actions.act_window">
            <field name="name">Pipeline Tech</field>
            <field name="res_model">coya.tech.projet</field>
            <field name="view_mode">kanban,form</field>
        </record>
        <menuitem id="menu_coya_tech_root"
                  name="IT &amp; Tech"
                  parent="coya_departments.menu_coya_department_it"
                  action="action_coya_tech_projet"
                  sequence="10"/>
    </data>
</odoo>
